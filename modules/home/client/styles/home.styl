.home
    height: max-content-height
    center-on-screen()

    .home-background
        position: absolute

.home

    .name-and-date
        position: relative
        width: 490px
        height: auto
        margin-top: 120px
        margin-left: 65px
        float: left

    .image-sequence
        float: left
        position: relative

        li
            list-style-type: none
            span
                width: 390px
                margin-left: 120px
                height: max-content-height - 30
                margin-top: 15px
                position: absolute
                color: transparent
                opacity: 0
                -webkit-backface-visibility: hidden
                -webkit-animation: imageAnimation 7s linear infinite 0s
                -moz-animation: imageAnimation 7s linear infinite 0s
                -o-animation: imageAnimation 7s linear infinite 0s
                -ms-animation: imageAnimation 7s linear infinite 0s
                animation: imageAnimation 7s linear infinite 0s

    @keyframes imageAnimation
        0%
            opacity: 0
        7%
            opacity: 1
        16%
            opacity: 1
        28%
            opacity: 0
        100%
            opacity: 0

    .image-sequence
        li:nth-child(1)
            span
                background-image: url(../images/home/sequence/falling-leaves-2.jpg)
                background-size: auto max-content-height - 30

    .image-sequence
